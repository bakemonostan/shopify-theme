{% style %}
  body {
    background-color: {{ section.settings.website_background_color }}
     !important;
    color: {{ section.settings.text_color }};
  }

  ::-moz-selection {
    color: {{ section.settings.selection_text_color }};
    background: {{ section.settings.selection_background_color }};
  }

  ::selection {
    color: {{ section.settings.selection_text_color }};
    background: {{ section.settings.selection_background_color }};
  }

  .ueq-header-wrapper fieldset {
    border-color: {{ section.settings.website_border_color }};
    color: {{ section.settings.website_border_color }};
  }

  .ueq-header-wrapper #server-status {
    color: {{ section.settings.server_status_color }};
  }

  .ueq-menu-wrapper {
    border-left: 3px solid black;
    min-height: 60vh;
    border-right: 3px solid black;
  }

  @media screen and (min-width: 586px) {
    .ueq-menu-wrapper {
      min-height: auto;
    }
  }

  .ueq-menu-wrapper .item-line {
    background-color: {{ section.settings.website_border_color }};
  }

  .ueq-footer-container {
    border-bottom: 3px solid;
    border-left: 3px solid;
    border-right: 3px solid;
  }

  .ueq-footer p {
    color: {{ section.settings.website_border_color }};
  }

  .legals a,
  .legals span {
    color: {{ section.settings.legal_color }}
  }
{% endstyle %}

{% schema %}
  {
    "name": "Website settings",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "color",
        "id": "website_background_color",
        "label": "Pick a color",
        "default": "#000000",
        "info": "This changes the background color."
      },
      {
        "type": "color",
        "id": "website_border_color",
        "label": "Pick a color",
        "default": "#fff056",
        "info": "This changes colors of the surrounding lines and copyright text."
      },
      {
        "type": "color",
        "id": "server_status_color",
        "label": "Pick a color",
        "default": "#00ff00",
        "info": "This changes the color of the blinking server status text"
      }, {
        "type": "header",
        "content": "Text selection settings"
      }, {
        "type": "color",
        "id": "selection_background_color",
        "label": "Pick a color",
        "default": "#fff056",
        "info": "Selection background color, the outside when selected"
      }, {
        "type": "color",
        "id": "selection_text_color",
        "label": "Pick a color",
        "default": "#000000",
        "info": "Selection text color, the inside when selected"
      }, {
        "type": "header",
        "content": "Text settings"
      }, {
        "type": "color",
        "id": "legal_color",
        "label": "Pick a color",
        "default": "#fff056",
        "info": "Color of the legal links"
      }, {
        "type": "paragraph",
        "content": "Developed by DigitalDepth"
      }
    ]
  }
{% endschema %}