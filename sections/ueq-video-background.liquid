{% style %}
    #ueq-video-background{
        position: fixed;
        right: 0; bottom: 0;
        min-width: 100%; min-height: 100%;
        z-index: -1;
        opacity: {{section.settings.video_background_opacity}};
    }

{% endstyle %}

{% if section.settings.video_background_toggle and section.settings.video_url %}
    <video playsinline autoplay muted loop id="ueq-video-background">
        <source src={{section.settings.video_url}} type="video/mp4">
    </video>
    
{% endif %}

{% schema %}
{
    "name": "Video background settings",
    "settings": [
        {
            "type": "checkbox",
            "id": "video_background_toggle",
            "label": "Turn video background on/off",
            "default": false
        },
        {
            "type": "range",
            "id": "video_background_opacity",
            "label": "Set opacity of video background",
            "min": 0.1,
            "max": 1.0,
            "step": 0.1,
            "default": 1.0
        },
        {
            "type": "url",
            "id": "video_url",
            "label": "Add video url. (mp4 only)"
        },
        {
            "type": "paragraph",
            "content": "Developed by DigitalDepth"
        }
    ]


    
}
{% endschema %}